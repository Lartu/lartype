#Should check if wkhtmltopdf is installed
echo "[*] Starting Lartype server"
python ~/bin/_lartype/threadingserver.py &
SERVER=$!
echo "[*] Started with PID $SERVER"
EXITCODE=1
while [ $EXITCODE -ne 0 ]
do
    ~/bin/_lartype/wkhtmltopdf -B 30mm -T 30mm -R 20mm -L 20mm --disable-smart-shrinking --header-html http://localhost:23416/lartype/header.html --footer-html http://localhost:23416/lartype/footer.html http://localhost:23416/lartype/lartype.html output.pdf
    EXITCODE=$?
    if [ $EXITCODE = 1 ]
    then
        echo "[*] Error, trying again (wait!)"
    fi
done
kill $SERVER
echo "[*] Done!"
